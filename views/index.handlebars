<div class="container">	
	<div class="jumbotron"> 
		<img src="/assets/images/burger.png" width=200px height=120px> 
		<h1> Eat-Da-Burger! </h1>
	</div>


	{{!-- burger list --}}
	<div class="row">
		<div class="col-md-6">
			<div class="panel-panel default">
				<ul class="list-group">
				{{#each burgers}}
					{{#unless this.devoured}}
					<li class="list-group-item">
						<div class="input-group">
							<p class="burgers"> {{this.burger_name}} </p>
							<span class="input-group-btn">
								<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-default btn-lg" type="submit"> Devour it!  </button>
								</form>
							</span>
						</div>
					</li>
					{{/unless}}
				{{/each}}
				</ul>
			</div>
		</div>

		{{!-- eaten burger list --}}
	
		<div class="col-md-6">
			<div class="panel panel-default">
				<ul class="list-group">
				{{#each burgers}}
					{{#if this.devoured}}
					<li class="list-group-item">
						<p class="burgers">{{this.burger_name}} </p>
					</li>
					{{/if}}
				{{/each}}
				</ul>
			</div>
		</div>
	</div>

	<div class="col-md-10 col-md-offset-1">
		<p class="burgers"> Enter the name of the burger you want to eat & clich the add a burger button. </p>

		{{!-- add burgers --}}
		<form class="create-update-form" action="burgers/create" method="POST">

			<div class="form-group">
				<textarea class="form-control input-md" type="text" name="b_name" rows="3"> </textarea>
			</div>

			<button class="btn btn-default btn-lg" type="submit">Add a Burger!</button>
		</form>
	</div>
</div>